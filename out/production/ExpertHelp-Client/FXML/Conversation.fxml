                  <HBox prefHeight="72.0" prefWidth="400.0" style="-fx-spacing: 8;">
                     <children>
                        <ImageView fx:id="contactImage" fitHeight="49.0" fitWidth="76.0" pickOnBounds="true" preserveRatio="true">
